<client:widget name="ServerSelect" base="Frame">
    <Title>Connect to Server</Title>

    <Width>32</Width>
    <Height>13</Height>

    <CenterToParent />

    <Children>
        <Label name="lbl_hostname">
            <Text>Host name</Text>
            <ForeColor>DarkGray</ForeColor>

            <Left>2</Left>
            <Top>2</Top>
        </Label>

        <TextBox name="txt_hostname">
            <Text>localhost</Text>
            <Length>28</Length>

            <Left>3</Left>
            <Top>4</Top>
        </TextBox>

        <Label name="lbl_port">
            <Text>Port number</Text>
            <ForeColor>DarkGray</ForeColor>

            <Left>2</Left>
            <Top>6</Top>
        </Label>

        <TextBox name="txt_port">
            <Text>14242</Text>
            <Length>5</Length>

            <Left>3</Left>
            <Top>8</Top>
        </TextBox>

        <Button name="btn_connect">
            <Text>Connect</Text>

            <Left>3</Left>
            <Top>10</Top>
        </Button>

        <Button name="btn_quit">
            <Text>Quit</Text>
            <ForeColor>DarkRed</ForeColor>

            <Left>26</Left>
            <Top>10</Top>
        </Button>
    </Children>
</client:widget>

