<server:entity name="character">
    <StaticDrawable>
        <Layer>Characters</Layer>
        <Symbol>&#0001;</Symbol>
        <ForeColor>White</ForeColor>
    </StaticDrawable>

    <Damageable>
        <MaxHealth>10</MaxHealth>
    </Damageable>

    <Container>
        <MaxWeight>25</MaxWeight>
    </Container>
</server:entity>

<server:entity name="kobold" base="character">
    <StaticDrawable>
        <Layer>Characters</Layer>
        <Symbol>k</Symbol>
        <ForeColor>DarkYellow</ForeColor>
    </StaticDrawable>

    <Damageable>
        <MaxHealth>5</MaxHealth>
    </Damageable>
</server:entity>

<server:entity name="player" base="character">
    <StaticDrawable>
        <Symbol>@</Symbol>
        <ForeColor>Yellow</ForeColor>
    </StaticDrawable>

    <PlayerControl>
        <MovePeriod>0.5</MovePeriod>
    </PlayerControl>
</server:entity>
